<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardMapper">

	<!-- 게시판 작성 -->
	<insert id="insert">
		INSERT INTO BOARD(TITLE,CONTENT,WRITER,REGDATE)
		VALUES(#{title},#{content},#{writer},now())
	</insert>

	<!-- 게시글 목록 조회 -->
	<select id="list" resultType="org.smallman.vo.BoardVO" parameterType="org.smallman.vo.Criteria">
		SELECT
		BNO,TITLE,CONTENT,WRITER,REGDATE
		FROM BOARD
		ORDER BY BNO DESC
		LIMIT #{rowStart}, #{rowEnd}
	</select>
	
	<!-- 게시글 총 갯수-->
	<select id="listCount" resultType="int">
	<![CDATA[
		SELECT COUNT(BNO)
		FROM BOARD
		WHERE BNO > 0;
	]]>
	</select>

	<!-- 게시물 조회 -->
	<select id="read" parameterType="int"
		resultType="org.smallman.vo.BoardVO">
		SELECT BNO, TITLE, CONTENT, WRITER, REGDATE
		FROM BOARD
		WHERE
		BNO = #{bno}
	</select>

	<!-- 수정 -->
	<select id="update" parameterType="org.smallman.vo.BoardVO">
		UPDATE BOARD SET
		TITLE =
		#{title},
		CONTENT = #{content}
		WHERE BNO = #{bno}
	</select>

	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		DELETE FROM BOARD
		WHERE BNO = #{bno}
	</delete>

</mapper>